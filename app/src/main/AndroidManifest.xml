<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lammy.ffmpegdemo">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-feature android:name="android.hardware.Camera" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <application
        android:name=".AvideoApp"
        android:allowBackup="true"
        android:icon="@mipmap/video"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.AudioActivity"/>
        <activity android:name=".view.VideoActivity"/>
        <activity android:name=".view.AudioFormatChangeMediaCodecActivity"/>
        <activity android:name=".view.AudioRecordFFmpegActivity"/>
        <activity android:name=".view.AudioRecordMediaCodecActivity"/>
        <activity android:name=".view.CameraFFmpegPushRtmpActivity"/>
        <activity android:name=".view.CameraMediaCodecFileActivity"/>
        <activity android:name=".view.CameraMediaCodecRtmpActivity"/>
        <activity android:name=".view.VideoCompoundFileActivity"/>
        <activity android:name=".view.VideoFileRtmpFFmpegActivity"/>
        <activity android:name=".view.VideoFileRtmpRtmpDumpActivity"/>
    </application>

</manifest>