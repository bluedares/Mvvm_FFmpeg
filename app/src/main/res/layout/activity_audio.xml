<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    tools:context="com.example.lammy.ffmpegdemo.view.AudioActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        >
        <Button
            android:id="@+id/btn_get_mp3"
            style="@style/BtnMain"
            android:text="获取音频信息mp3"/>
        <Button
            android:id="@+id/btn_play_mp3"
            style="@style/BtnMain"
            android:text="使用audioTrack播放一个mp3"/>
        <Button
            android:id="@+id/btn_media_change_by_MediaCodec"
            style="@style/BtnMain"
            android:text="音頻格式轉換(MediaCodec)"/>
        <Button
            android:id="@+id/btn_aac_MediaCodec"
            style="@style/BtnMain"
            android:text="錄製AAC編碼(MediaCodec)"/>
        <Button
            android:id="@+id/btn_aac_ffmpeg"
            style="@style/BtnMain"
            android:text="錄製AAC編碼(ffmpeg)"/>

    </LinearLayout>

</ScrollView>
