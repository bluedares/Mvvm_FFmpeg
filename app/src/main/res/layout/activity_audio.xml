<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    tools:context="com.example.lammy.ffmpegdemo.view.audio.AudioActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        >
        <Button
            android:id="@+id/btn_audio_info"
            style="@style/BtnMain"
            android:text="获取音频信息"/>
        <Button
            android:id="@+id/btn_resampling"
            style="@style/BtnMain"
            android:text="音频信息重采样"/>
        <Button
            android:id="@+id/btn_audio_change_by_MediaCodec"
            style="@style/BtnMain"
            android:text="音频格式转换(MediaCodec)"/>
        <Button
            android:id="@+id/btn_aac_MediaCodec"
            style="@style/BtnMain"
            android:text="录制AAC编码(MediaCodec)"/>
        <Button
            android:id="@+id/btn_aac_ffmpeg"
            style="@style/BtnMain"
            android:text="录制AAC编码(FFmpeg)"/>

    </LinearLayout>

</ScrollView>
